#include<iostream>
#include<time.h>
#include<stdlib.h>
using namespace std;
void display(){
	cout << "\nOperations available on this calculator.\n\n";
	cout << "1. Addition\n";
	cout << "2. Subtraction\n";
	cout << "3. Multiplication\n";
	cout << "4. Division\n";
	cout << "5. Exit\n";
}
void add(){
	float num,numm;
	float sum=0;
	cout << "Enter how many numbers you want to add:";
	cin >> num;
	cout << "Enter the numbers you want to add:\n";
	for(int i=0; i<num;i++){
		cin >> numm;
		sum+=numm;
	}
	cout << "Addition of the entered numbers is:" << sum;
}
void sub(){
	float num1,num2;
	float sub;
	cout << "Enter the two numbers you want to subtract:";
	cin >> num1 >> num2;
	sub=num1-num2;
	cout << "Subtraction of the numbers " << num1 << " and " << num2 << " is " << sub;
}

void mul(){
	float no1,no2;
	float mull=1.0;
	cout << "Enter how many numbers you want to multiply:";
	cin >> no1;
	cout << "Enter the numbers you want to multiply:\n";
	for(int i=0; i<no1;i++){
		cin >> no2;
		mull=mull*no2;
	}
	cout << "Multiplication of the entered numbers is \n" << mull;
}

void div(){
	float num1,num2;
	float divv;
	cout << "Enter the two numbers you want to divide:";
	cin >> num1 >> num2;
	if(num1 > num2){
		divv=num2/num1;
		cout << "The division of " << num1 <<" and " << num2 << " is " << divv;
	}
	else if(num2 < num1){
		divv=num1/num2;
		cout << "The divions of " << num1 <<" and " << num2 << " is " << divv;
	}
	else{
		divv=num1/num2;
		cout << "The division of " << num1 <<" and " << num2 << " is " << divv;
	}
}
int main(){
	string name;
	int choice;
	cout << "\t\t\t\t------------------------Calculator----------------------\n\n\n";
	cout << "Enter your name:";
	cin >> name;
	cout << "Hello "<< name << " You can now proceed on to use the calculator.\n\n";

	display();
	for(; ;){
		cout << "\nEnter your choice to perform:";
		cin >> choice;
		switch(choice){
			case 1:
				add();
				break;
			case 2:
				sub();
				break;
			case 3:
				mul();
				break;
			case 4:
				div();
				break;
			case 5:
				exit(1);
		}
	}

return 0;
}
